{{> multiple-select }}

{{#if tasks}}
    {{> tasks tasks=tasks buttons=true }}
{{ else }}
    <h3 class="text-center text-light bg-success py-3">There are no tasks</h3>
{{/if }}

{{#if tasksCompleted }}
    <hr>
    <h3 class="text-center text-light bg-info py-3">Completed</h3>
    {{> tasks tasks=tasksCompleted isTaskCompleted=true buttons=true }}
{{/if }}

{{#if (comparison tasks '||' tasksCompleted) }}
    {{> modal-edit-task }}
    {{> modal-delete-task }}
{{/if}}

<script src="/static/js/change-color.js" type="module"></script>
<script src="/static/js/task.js" type="module"></script>
<script src="/static/js/drag-and-drop-tasks.js" type="module"></script>
<script src="/static/js/multiple-select.js"></script>